server {
    listen      80;
    server_name sub.domain.org;
    rewrite     ^   https://$server_name$request_uri? permanent;
}

server {
    listen 443 ssl;
    server_name sub.domain.org;
    passenger_enabled on;
    root <path to public>;

    ssl on;
    ssl_certificate /etc/ssl/certs/ssl.crt;
    ssl_certificate_key /etc/ssl/certs/ssl.key;
    ssl_session_timeout  5m;
}
